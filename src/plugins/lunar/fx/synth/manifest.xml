<?xml version="1.0" encoding="utf-8"?>
<zzub>
  <plugin
     uri="@trac.zeitherrschaft.org/aldrin/lunar/generator/bassline;1"
     name="Lunar Bassline"
     shortname="Bassline"
     type="generator"
     mintracks="1"
     maxtracks="1"
     description="A high quality sound monosynth similar to a famous silver box."
     author="Vytautas JanÄauskas"
     email="unaudio@gmail.com">
    <parameters>
      <valuenamegroup>
	<valuenames id="waveform_types">
	  <alias value="0" name="Saw"/>
	  <alias value="1" name="Square"/>
	</valuenames>
      </valuenamegroup>
      <global>
	<parameter
	   id="waveform"
	   name="Waveform"
	   description="Waveform used by the synthesizer."
	   type="byte"
	   minvalue="0"
	   maxvalue="1"
	   defvalue="0"
	   valuenames="waveform_types"
	   state="true"/>
	<parameter
	   id="attack"
	   name="Attack (ms)"
	   description="How long until a tone is fully amplified"
	   type="float"
	   logarithmic="true"
	   power="0.7"
	   minvalue="0.1"
	   maxvalue="100.0"
	   defvalue="30.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="decay"
	   name="Decay (ms)"
	   description="How long until a tone is at sustain volume"
	   type="float"
	   logarithmic="true"
	   power="0.7"
	   minvalue="50.0"
	   maxvalue="1000.0"
	   defvalue="120.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="env_mod"
	   name="Envelope Mod"
	   description="Envelope modulation of VCF"
	   type="float"
	   minvalue="0"
	   maxvalue="1"
	   defvalue="1.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="cutoff"
	   name="Cutoff (Hz)"
	   description="Cutoff frequency of filter"
	   type="float"
	   logarithmic="true"
	   power="0.4"
	   minvalue="10.0"
	   maxvalue="12000.0"
	   defvalue="3000.0"
	   precision="1"
	   state="true"/>
	<parameter
	   id="resonance"
	   name="Resonance"
	   description="Resonance of VCF"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.5"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="accent"
	   name="Accent"
	   description="Amount of accent on accented notes"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.8"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="distortion"
	   name="Distortion"
	   description="Filter distortion"
	   type="float"
	   minvalue="0"
	   maxvalue="1.0"
	   defvalue="0.25"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="amp"
	   name="Master Gain (dB)"
	   description="Final gain of output signal"
	   type="float"
	   minvalue="-48"
	   maxvalue="0"
	   defvalue="-6"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="octave"
	   name="Transpose (oct)"
	   description="Transpose by a specified number of octaves"
	   type="float"
	   minvalue="-2"
	   maxvalue="2"
	   defvalue="0"
	   precision="1.0"
	   state="true"/>
	<parameter
	   id="pitchslide"
	   name="Pitch Slide (ms)"
	   description="How long the pitch slides from current to new note"
	   type="float"
	   logarithmic="true"
	   minvalue="0.1"
	   maxvalue="10000"
	   defvalue="35.0"
	   precision="1"
	   power="0.6"
	   state="true"/>
      </global>
      <track>
	<parameter
	   id="note"
	   type="note"/>
	<parameter
	   id="slide"
	   name="Slide"
	   description="Slide to this note"
	   type="switch"
	   defvalue="0"/>
	<parameter
	   id="accent"
	   name="Accent"
	   description="Accent the note"
	   type="switch"
	   defvalue="0"/>
      </track>
    </parameters>
    <files>
      <file ref="Bassline.cpp"/>
      <file ref="Bassline.hpp"/>
      <file ref="ADSR.cpp"/>
      <file ref="ADSR.hpp"/>
      <file ref="LPF18.cpp"/>
      <file ref="LPF18.hpp"/>
      <file ref="Inertia.cpp"/>
      <file ref="Inertia.hpp"/>
    </files>
    <modules>
      <module id="bassline">
	<source language="c++" ref="Bassline.cpp" fxdef="Bassline.hpp"/>
      </module>
    </modules>
  </plugin>
</zzub>
