<?xml version="1.0" encoding="utf-8"?>
<zzub>
  <plugin
     uri="@trac.zeitherrschaft.org/aldrin/lunar/generator/synth;1"
     name="Solar Mercury"
     shortname="Mercury"
     type="generator"
     mintracks="1"
     maxtracks="1"
     description="A high quality monosynth similar to a famous silver box."
     author="Vytautas JanÄauskas"
     email="unaudio@gmail.com">
    <parameters>
      <valuenamegroup>
	<valuenames id="waveform_types">
	  <alias value="0" name="Saw"/>
	  <alias value="1" name="Square"/>
	</valuenames>
      </valuenamegroup>
      <global>
	<parameter
	   id="waveform"
	   name="Waveform"
	   description="Waveform used by the synthesizer."
	   type="byte"
	   minvalue="0"
	   maxvalue="1"
	   defvalue="0"
	   valuenames="waveform_types"
	   state="true"/>
	<parameter
	   id="attack"
	   name="Attack (ms)"
	   description="How long until a tone is fully amplified"
	   type="float"
	   logarithmic="true"
	   power="0.7"
	   minvalue="0.1"
	   maxvalue="100.0"
	   defvalue="1.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="decay"
	   name="Decay (ms)"
	   description="How long until a tone is at sustain volume"
	   type="float"
	   logarithmic="true"
	   power="0.7"
	   minvalue="100.0"
	   maxvalue="1000.0"
	   defvalue="300.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="freq"
	   name="Envelope Mod"
	   description="Envelope modulation of VCF"
	   type="float"
	   minvalue="0"
	   maxvalue="1"
	   defvalue="0.5"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="cutoff"
	   name="Cutoff (Hz)"
	   description="Cutoff frequency of filter"
	   type="float"
	   logarithmic="true"
	   power="0.4"
	   minvalue="10.0"
	   maxvalue="12000.0"
	   defvalue="1000.0"
	   precision="1"
	   state="true"/>
	<parameter
	   id="res"
	   name="Resonance"
	   description="Resonance of VCF"
	   type="float"
	   minvalue="0"
	   maxvalue="1.0"
	   defvalue="0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="dist"
	   name="Distortion"
	   description="Filter distortion"
	   type="float"
	   minvalue="0"
	   maxvalue="1.0"
	   defvalue="0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="amp"
	   name="Master Gain (dB)"
	   description="Final gain of output signal"
	   type="float"
	   minvalue="-48"
	   maxvalue="0"
	   defvalue="-6"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="pitchslide"
	   name="Pitch Slide (ms)"
	   description="How long the pitch slides from current to new note"
	   type="float"
	   logarithmic="true"
	   minvalue="0.1"
	   maxvalue="10000"
	   defvalue="0.1"
	   precision="1"
	   power="0.6"
	   state="true"/>
	<parameter
	   id="vel_cutoff"
	   name="Vel->Cutoff"
	   description="How much does velocity affect cutoff frequency"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="vel_reso"
	   name="Vel->Reso"
	   description="How much does velocity affect resonance"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
	<parameter
	   id="vel_attack"
	   name="Vel->Attack"
	   description="How much does velocity affect attack time"
	   type="float"
	   minvalue="0.0"
	   maxvalue="1.0"
	   defvalue="0.0"
	   precision="0.01"
	   state="true"/>
      </global>
      <track>
	<parameter
	   id="note"
	   type="note"/>
	<parameter
	   id="volume"
	   name="Volume"
	   description="Volume of the note"
	   type="byte"
	   minvalue="0"
	   maxvalue="128"
	   defvalue="128"
	   novalue="255"/>
	<parameter
	   id="slide"
	   name="Slide"
	   description="Slide to this note"
	   type="switch"
	   defvalue="0"/>
      </track>
    </parameters>
    <files>
      <file ref="synth.cpp"/>
      <file ref="synth.h"/>
      <file ref="svf.h"/>
      <file ref="adsr.h"/>
    </files>
    <modules>
      <module id="synth">
	<source language="c++" ref="synth.cpp" fxdef="synth.h"/>
      </module>
    </modules>
  </plugin>
</zzub>
